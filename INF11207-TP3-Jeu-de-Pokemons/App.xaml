<Application x:Class="INF11207_TP3_Jeu_de_Pokemons.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/Mainwindow.xaml">
    <Application.Resources>
        <Style x:Key="AccueilLabelStyle" TargetType="{x:Type Label}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Grid.Column" Value="0" />
        </Style>
        <Style x:Key="AccueilButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Grid.Column" Value="0" />
            <Setter Property="Margin" Value="200,20,200,20" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </Application.Resources>
</Application>
